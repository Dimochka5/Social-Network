@model Post

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Post</title>
    <link rel="stylesheet" href="~/css/EditPost.css" asp-append-version="true"/>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Cardo:ital,wght@0,400;0,700;1,400&family=Montserrat+Subrayada:wght@400;700&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet" />
</head>
<body>
    <!--Upper block-->
    <div class="upperBlock">
        <!-- Logo -->
        <div class="logoBlock">
            <img src="images/Logo.png" alt="logo" class="logo" />
            <label class="lLogo">Social Network</label>
        </div>

        <!--Buttons-->
        <div class="buttonsBlock">
            <button>My account</button><button>All posts</button><button>All accounts</button>
        </div>
    </div>

    <!--Edit Post-->
    <div class="createPostBackgroundBlock">
        <div class="createPostBlock">

            <!--Account block-->
            <div class="createPostAccountBlock">
                <div class="createPostAccountName">
                    <label>@Model.getName()</label>
                </div>
            </div>

            <!--Inputs block-->
            <div asp-validation-summary="ModelOnly"></div>
            <form asp-action="EditPost" asp-controller="Main" method="post" enctype="multipart/form-data">
            <div class="createPostInputsBlock">
                <input type="hidden" value="@Model.IdPost" asp-for="IdPost"/>
                <label class="createPostDescLabel">Enter your description</label>
                <textarea class="createPostDesc" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="errorDesc"></span>
                <input type="file" class="createPostImage" asp-for="Image">
            </div>
            <button class="createPost">Edit post</button>
            </form>
        </div>
    </div>


</body>

</html>
