@model List<Post>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <link rel="stylesheet" href="~/css/posts.css" asp-append-version="true"/>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Cardo:ital,wght@0,400;0,700;1,400&family=Montserrat+Subrayada:wght@400;700&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet" />
</head>
<body>
    <!--Upper block-->
    <div class="upperBlock">
        <!-- Logo -->
        <div class="logoBlock">
            <img src="~/images/Logo.png" alt="logo" class="logo" />
            <label class="lLogo">Social Network</label>
        </div>

        <!--Buttons-->
        <div class="buttonsBlock">
            <form asp-action="MyAccount" asp-controller="Main" method="get"><button>My account</button></form><form asp-action="Posts" asp-controller="Main" method="get"><button>All posts</button></form><form asp-action="AllAccounts" asp-controller="Main" method="get"><button>All accounts</button></form>
        </div>
    </div>

    <!--Posts block-->
    <div class="postsBlock">
        <div class="upperPostsBlock">
            <label>Posts</label>
        </div>
        <!--Posts-->
        <div class="posts">

            @foreach(Post post in Model){
                <a asp-action="Account" asp-controller="main" asp-route-idAccount="@post.IdAccount" style="text-decoration: none;">
                    <div class="post">
                <!--Author-->
                <div class="postAccountBlock">
                    <div class="postAccountImage">
                            @if (post.getAvatarka() != null && post.getAvatarka().Length > 0) 
                            {<img src="data:image;base64,@Convert.ToBase64String(post.getAvatarka())" alt="ava" />} 
                    </div>
                    <div class="postAccountName">
                        <label>@post.getName()</label>
                    </div>
                    <div class="postAccountTime">
                        <label>@post.Time</label>
                    </div>
                </div>
                <!--Post-->
                <div class="restPost">
                    <div class="postDesc">
                        <label>@post.Description</label>
                    </div>
                    <div class="postImage">
                            @if (post.Image != null && post.Image.Length > 0)
                            {
                                <img src="data:image;base64,@Convert.ToBase64String(post.Image)" alt="image" />
                            }
                    </div>
                </div>
            </div>
            </a>
            }

        
            </div>
        </div>
</body>
</html>
